<!--pages/user/draw/draw.wxml-->
<view class='fucBox'>
  <view class='fucTitle'>
    <view class='titleLeft'>可提现金额￥{{}}</view>
    <view class='titleRight'>全部提现</view>
  </view>
  <view class='fucContent'>
    <view class='input'>
      <input type='digit'></input>
    </view>
  </view>
  <view class='info'>提现金额不低于1元，当日提现次数不超过10次</view>

  <navigator open-type='navigate' wx:if='{{!bankCard.number ? true : false}}' url='/pages/user/bindCard/bindCard' class='ooooooooo'>
    <view class='cardTitle'>添加银行卡</view>
    <view class='icon'><image src='/res/icon/icon_right_click.png'></image></view>
  </navigator>



  <navigator open-type='navigate' wx:else url='/pages/user/chooseCard/chooseCard' class='ooooooooo'>
    <view class='cardLeft'>
      <view class='cardImg'><image mode='aspectFit' src="{{bankCard.image}}"></image></view>
      <view class='cardTitle'>尾号{{bankCard.number}}</view>
    </view>
    <view class='icon'><image src='/res/icon/icon_right_click.png'></image></view>
  </navigator>


  <view class='Fuccccccbtn' bindtap='fucActttt'>确认提现</view>
</view>
