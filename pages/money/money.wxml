<!--pages/money/money.wxml-->
<view class='backBox'>
  <image src='./res/img/bonus-bg.png'></image>
  <view class='textBox'>
    <view class='moneyBox'>
      <view>￥</view>
      <view>{{userInfo.yue}}</view>
    </view>
    <view class='info'>总资产（元）</view>
  </view>
</view>


<view class='mainBox'>
  <view class='navBox'>
    <view class='navItem' class='"navItem "+ {{item.id == showId ? "navActive": ""}}' data-id='{{item.id}}' bindtap='changeNav' wx:for='{{navList}}' wx:key='index'>{{item.title}}</view>
  </view>

  <view class='listBox'>
    <view class='itemBox' wx:for='{{cardList}}' wx:key='index'>
      <view class='itemLeft'>
        <view wx:if='{{showId == 0 ? true : false}}' class='userImg'>
          <image src='{{item.avatar}}'></image>
        </view>
        <view class='leftText'>
          <view>{{item.nickname ? item.nickname:"储值金额"}}</view>
          <view>{{item.pay_time?item.pay_time:item.create_time}}</view>
        </view>
      </view>
      <view class='itemRight'>
        <view>{{item.money}}</view>
        <view>已到账</view>
      </view>
    </view>
  </view>

</view>