/* pages/home/class/class.wxss */

.mainBox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  overflow: hidden;
}

.itemBox {
  background: #fff;
  border-radius: 10rpx;
  width: calc(50% - 20rpx);
  height: 536rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
}

.titleBox {
  margin-left: 15rpx;
}

.price {
  font-size: 40rpx;
  font-weight: 800;
  color: rgba(204, 0, 0, 1);
}

.priceOld {
  font-size: 24rpx;
  font-family: PingFang SC;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.title {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-left: 16rpx;
}

.info {
  font-size: 32rpx;
  font-weight: 800;
  color: rgba(51, 51, 51, 1);
  margin-left: 20rpx;
  margin-top: 26rpx;
  margin-bottom: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.img {
  width: 100%;
  height: 100%;
}

.imgBox {
  width: 100%;
  height: 355rpx;
  overflow: hidden;
  margin: 0rpx auto 50rpx auto;
}
