<!--pages/order/orderdetail/orderdetail.wxml-->


<view class='statusBox'>
  <view class='titleBox'>
    <view class='icon'><image src='./res/img/icon-order.png'></image></view>
    <view class='fontTitle'>订单状态:{{orderDetail.top.status}}</view>
  </view>
  <view class='fontSpecial'>支付剩余时间:{{orderDetail.top.time}}</view>
</view>


<view class='userBox'>
  <view class='userTitleBox'>
    <view class='realName'>
      <view class='icon'><image src='./res/img/add.png'></image></view>
      <view class='fontTitle'>{{orderDetail.address.realname}}</view>
    </view>
    <view class='fontTitle'>{{orderDetail.address.mobile}}</view>
  </view>
  <view class='userContentBox'>
    <view class='addreType'>默认</view>
    <view class='fontTitle'>{{orderDetail.address.province}} {{orderDetail.address.city}} {{orderDetail.address.area}} {{orderDetail.address.address}}</view>
  </view>
</view>

<view class='orderBox'>
  <view class='goodInfo'>
    <view class='goodImg'><image src='{{orderDetail.order.listimg}}'></image></view>
    <view class='goodInfoContentBox'>
      <view class='goodName'>{{orderDetail.order.title}}{{orderDetail.order.optionname}}</view>
      <view class='goodPrice'>
        <view class='priceStronge'>￥{{orderDetail.order.goodsprice}}</view>
        <view class='dedPrice'>x{{orderDetail.order.total}}</view>
      </view>
      
    </view>
  </view>

  <view class='orderPriceInfoBox'>
    <view class='dedTitle'>储值抵扣</view>
    <view class='dedPrice'>-{{orderDetail.order.dikou_money}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>商品金额</view>
    <view class='price'>￥{{orderDetail.order.price}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>实付金额</view>
    <view class='price'>￥{{orderDetail.order.pay_money}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>快递</view>
    <view class='price'>￥{{}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>支付方式</view>
    <view class=''>{{orderDetail.order.paytype}}</view>
  </view>
</view>


<view class='otherBox'>
  <view class='fontTitle'>订单编号:{{orderDetail.oother.order_sn}}</view>
  <view class='fontTitle'>下单时间:{{orderDetail.oother.createtime}}</view>
</view>


<view class='btnFoot'>
  <view class='btnSpecial'>立即支付</view>
  <view class='btnCancel'>取消订单</view>
</view>