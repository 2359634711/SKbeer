<!--pages/order/orderdetail/orderdetail.wxml-->


<view bindtap='navTo' data-flag='{{orderDetail.top.status == "3" ? true : false}}' class='statusBox'>
  <view class='titleBox'>
    <view class='icon'><image src='./res/img/icon-order.png'></image></view>
    <view class='fontTitle'>订单状态: {{orderDetail.top.status == -1 ? goodStatus[5].statusTitle : goodStatus[orderDetail.top.status].statusTitle}}</view>
  </view>
  <view wx:if='{{orderDetail.top.status == "0"}}' class='fontSpecial'>支付剩余时间:{{orderDetail.top.time}}</view>
  <view  wx:if='{{orderDetail.top.status == "1" || orderDetail.top.status == "2"}}' class='fontSpecial'>物流信息: {{orderDetail.top.wuliu}}</view>
  <view wx:if='{{orderDetail.top.status == "3"}}' class=''>
    <view class='left'>
      <view class='fontSpecial'>快递已签收，签收人： {{orderDetail.top.realname}}</view>
      <view class='fontInfo'>{{orderDetail.top.finishtime}}</view>
    </view>
    <view class='icon'><!--右箭头--></view>

  </view>
</view>


<view class='userBox'>
  <view class='userTitleBox'>
    <view class='realName'>
      <view class='icon'><image src='./res/img/add.png'></image></view>
      <view class='fontTitle'>{{orderDetail.address.realname}}</view>
    </view>
    <view class='fontTitle'>{{orderDetail.address.mobile}}</view>
  </view>
  <view class='userContentBox'>
    <view class='addreType'>默认</view>
    <view class='fontTitle'>{{orderDetail.address.province}} {{orderDetail.address.city}} {{orderDetail.address.area}} {{orderDetail.address.address}}</view>
  </view>
</view>

<view class='orderBox'>
  <view class='goodInfo'>
    <view class='goodImg'><image src='{{orderDetail.order.listimg}}'></image></view>
    <view class='goodInfoContentBox'>
      <view class='goodName'>{{orderDetail.order.title}}{{orderDetail.order.optionname}}</view>
      <view class='goodPrice'>
        <view class='priceStronge'>￥{{orderDetail.order.goodsprice}}</view>
        <view class='dedPrice'>x{{orderDetail.order.total}}</view>
      </view>
      
    </view>
  </view>

  <view class='orderPriceInfoBox'>
    <view class='dedTitle'>储值抵扣</view>
    <view class='dedPrice'>-{{orderDetail.order.dikou_money}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>商品金额</view>
    <view class='price'>￥{{orderDetail.order.price}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>实付金额</view>
    <view class='price'>￥{{orderDetail.order.pay_money}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>快递</view>
    <view class='price'>￥{{}}</view>
  </view>
  <view class='orderPriceInfoBox'>
    <view class='title'>支付方式</view>
    <view class=''>{{orderDetail.order.paytype}}</view>
  </view>
</view>


<view class='otherBox'>
  <view class='fontTitle'>订单编号:{{orderDetail.oother.order_sn}}</view>
  <view class='fontTitle'>下单时间:{{orderDetail.oother.createtime}}</view>
</view>

<!--
-1取消订单0待付款1代发货2已发货3成功4退款申请
-->
<view class='btnFoot'>
  <view wx:if='{{orderDetail.top.status == "-1" ? true : false}}' class='btnSpecial'>删除订单</view>
  <view wx:if='{{orderDetail.top.status == "0" ? true : false}}' class='btnSpecial'>立即支付</view>
  <view wx:if='{{orderDetail.top.status == "0" ? true : false}}' class='btnCancel'>取消订单</view>
  <view wx:if='{{orderDetail.top.status == "1" ? true : false}}' class='btnSpecial'>取消订单</view>
  <view wx:if='{{orderDetail.top.status == "2" ? true : false}}' class='btnSpecialBlock' bindtap='navToHome'>再去逛逛</view>
  <view wx:if='{{orderDetail.top.status == "3" ? true : false}}' class='btnSpecialBlock' bindtap='navToHome'>再去逛逛</view>
</view>