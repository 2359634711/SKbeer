.priceBox{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 38rpx 27rpx;
}
.priceBox view:first-child{
  font-size:40rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(204,0,0,1);
  line-height:48rpx;
}
.priceBox view:last-child{
  margin-left: 12rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
