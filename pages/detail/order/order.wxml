<!--pages/detail/order/order.wxml-->
  <address-item addressInfo='{{addressInfo}}'></address-item>


  <view class='boxGood'>
    <view class='goodLeft'>
      <image src=''></image>
    </view>
    <view class='goodRight'>
      <view>CORONA墨西哥原装正品啤酒</view>
      <view class='option'>规格： 330mlx24</view>
      <view>￥299</view>
    </view>
  </view>




  <view class='infoBox'>
    <view class='infoItem'>
      <view class='infoLeft'>购买数量</view>
      <view class='caoNiMa'>
        <view class='fuck1'>-</view>
        <view class='fuck2'>456</view>
        <view class='fuck3'>+</view>
      </view>
    </view>
    <view class='infoItem'>
      <view class='infoLeft'>商品金额</view>
      <view class='caoNiMa2'>￥299.00</view>
    </view>
    <view class='infoItem'>
      <view class='infoLeft'>储值抵扣</view>
      <view class='caoNiMa3'>-￥10</view>
    </view>
  </view>

  <view class='otherBox'>
    <view class='infoItem'>
      <view class='infoLeft'>支付方式</view>
      <view class='infoRight otherRight'>
        <view class='icon'><image src='/res/icon/wechat.png'></image></view>
        <view>微信支付</view>
      </view>
    </view>
    <view class='infoItem'>
      <view class='infoLeft'>发货</view>
      <view class='infoRight otherRight'>快递 免费</view>
    </view>
  </view>


  <view class='footBox'>
  
    <view class='footLeft'>
      <view>实付 ￥289.00</view>
      <view>储值抵扣 -￥10</view>
    </view>
    <view class='footRight' bindtap='goPay'>确认订单</view>
  </view>

  <view class='payMask' wx:if='{{paySuccessFlag}}'>
  
    
  </view>

  <view class='paySuccessBox' wx:if='{{paySuccessFlag}}'>
    <view class='box'>
      <view class='imageBox'>
        <image src='/res/icon/img-sub-beer.png'></image>
      </view>

      <view class='asdwBox'>

        <view class='asdw'>
          <view class='asdw1'>￥</view>
          <view class='asdw2'>289.00</view>
        </view>
        <view class='asdw3'>支付成功</view>
      </view>

      <view class='yelooo'></view>

      <view class='btnBox'>
        <view class='btn1' bindtap='navToHome'>继续购物</view>
        <view class='btn2' bindtap='navToOrderDetail'>查看订单</view>
      </view>
    </view>
  </view>

  