<!--pages/detail/detail.wxml-->

<view class='infoBox'>
  <swiper indicator-dots="{{indicatorDots}}"
    circular="{{circular}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{goodInfo.thumb_url}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>


  <view class='priceBox'>
    <view class=''>￥{{goodInfo.marketprice}}</view>
    <view class=''>￥{{goodInfo.productprice}}</view>
  </view>
  <view class='infoBoxBottom'>{{goodInfo.title}}</view>
</view>

<view class='optionBox'>
  <view class='optionItem'>
    <view class='optionTitle'>发货</view>
    <view class='optionValue'>快递： 免费</view>
  </view>
  <view class='optionItem'>
    <view class='optionTitle'>规格</view>
    <view class='optionValue'>请选择</view>
  </view>
  <view class='optionItem'>
    <view class='optionTitle'>参数</view>
    <view class='optionValue'>品牌 净含量</view>
  </view>
</view>

<view class='contentBox'>
  <view class='contentTitle'>商品详情</view>
  <view  wx:for="{{goodInfo.thumb_url}}" class='contentImage'><image mode='widthFix' src='{{item}}'></image></view>
</view>

<view class='footBtn'>
  <view class='btnSpecialBlock' bindtap='showOrder'>立即购买</view>
</view>